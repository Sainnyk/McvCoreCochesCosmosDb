@model IEnumerable<McvCoreCochesCosmosDb.Models.Vehiculo>

@{
    ViewData["Title"] = "ListadoVehiculos";
}

<h1 style="color:blueviolet">Listado de vehiculos</h1>

<p>
    <a asp-controller="Coches" asp-action="Create" class="btn btn-success">Create new</a>
</p>
<p>
    <a asp-controller="Coches" asp-action="BuscadorCoches" class="btn btn-dark">Buscar coches</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VelocidadMaxima)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                <img src="@item.Imagen" style="width:150px;height:150px;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VelocidadMaxima)
            </td>
            <td>
                    <a asp-controller="Coches" asp-action="Delete" asp-route-id="@item.Id">
                        <img src="~/images/delete.png" height="50" width="50"/>
                    </a>
                    <a asp-controller="Coches" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                    <a asp-controller="Coches" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
